              {% for product in collection.products %}


              <div class="col-md-6 col-lg-3 ftco-animate">
    				<div class="product"  >
    					<a href="{{ product.url }}" class="img-prod"><img class="img-fluid" src="{{ product.featured_image | image_url }}" alt="Colorlib Template">
