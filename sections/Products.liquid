
 

 
 <section class="ftco-section">
    	<div class="container">
				<div class="row justify-content-center mb-3 pb-3">
          <div class="col-md-12 heading-section text-center ftco-animate">
          	<span class="subheading">Featured Products</span>
            <h2 class="mb-4">{{ section.settings.Products }}</h2>
            <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
          </div>
        </div>   		
    	</div>
    	<div class="container">
    		<div class="row">
    			{% for product in collections['men'].products %}<div class="col-md-6 col-lg-3 ftco-animate">
    				<div class="product">
    					<a href="{{ product.url }}" class="img-prod"><img class="img-fluid" src="{{ product.featured_image | image_url }}" alt="Colorlib Template">
    						<span class="status">30%</span> 
    						<div class="overlay"></div>
    					</a>
    					<div class="text py-3 pb-4 px-3 text-center">
    						<h3>{{- product.title | link_to: product.url }}</h3>
    						<div class="d-flex">
    							<div class="pricing">
		    						<p class="price"><span class="mr-2 price-dc">{{ product.compare_at_price | money }}</span><span class="price-sale">{{ product.price | money  }}</span></p>
		    					</div>
	    					</div>

                          	<div class="bottom-area d-flex px-3">
	    						<div class="m-auto d-flex">
	    							<a href="javascript:void(0)" variant_value="{{ product.selected_or_first_available_variant.id }}" class="heart d-flex justify-content-center align-items-center add-to-cart-button ">
	    								<span><i class="ion-ios-cart"></i></span>
	    							</a>
    							</div>
    						</div>
	    				
    					</div>
    				</div>
    			</div>
                  {% endfor %}

    		</div>
    	</div>
    </section>

    <div class="recommended-products">
    <h3>Customers Also Bought</h3>
    {% for product in collections['your-collection-handle'].products %}
        <div class="product">
            <a href="{{ product.url }}">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                <p>{{ product.title }}</p>
            </a>
        </div>
    {% endfor %}
</div>

  <script src="{{ 'adtcart.js' | asset_url }}"></script>    
    {% schema %}
{
  "name": "product Section index",
  "settings": [
    {
  "type": "text",
  "id": "Products",
  "label": "Products"
}
  
  ],
  "presets": [ 
    {
      "name": "product Section index"
    }
  ]
}
{% endschema %}